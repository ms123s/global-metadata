{
	"title": "Forms",
	"title_de": "Forms",
	"namespace": "http://b3mn.org/stencilset/xforms#",
	"description": "This is the XForms stencil set specification.",
	"stencils": [{
		"type": "node",
		"id": "XForm",
		"title": "XForm",
		"groups": ["Form"],
		"description": "A XForms form.",
		"view": "new_form.svg",
		"icon": "new_form.png",
		"mayBeRoot": true,
		"hide": true,
		"roles": ["main_container"],

		"layout": [{
			"type": "layout.rows",
			"marginTop": 30,
			"marginLeft": 30,
			"spacingX": 30,
			"spacingY": 30
		}],
		"properties": [{
			"id": "xf_id",
			"type": "String",
			"title": "Id",
			"prefix": "oryx",
			"value": "",
			"description": "This is a unique Id that distinguishes the form from other forms.",
			"readonly": false,
			"optional": true,
			"length": "50"
		},
		{
			"id": "xf_name",
			"type": "String",
			"title": "Name",
			"prefix": "oryx",
			"value": "${diagramname}",
			"description": "Name is an attribute that is text description of the form.",
			"popular": true,
			"readonly": true,
			"optional": false,
			"length": "50",
			"refToView": "formcaption",
			"wrapLines": true
		},
		{
			"id": "xf_version",
			"type": "String",
			"title": "version",
			"title_de": "Version",
			"prefix": "oryx",
			"value": "",
			"description": "This defines the version number of the form model.",
			"readonly": false,
			"optional": true,
			"length": "50"
		},
		{
			"id": "xf_default_buttons",
			"type": "Boolean",
			"title": "Default buttons",
			"title_de": "Standard Buttons",
			"prefix": "oryx",
			"value": true,
			"description": "Display default buttons",
			"popular": true,
			"readonly": false,
			"optional": true,
			"refToView": ""
		}]
	},
	{
		"type": "node",
		"id": "MenuItem",
		"title": "Menu item",
		"title_de": "Menue Eintrag",
		"groups": ["Controls"],
		"description": "An input control.",
		"view": "new_input.svg",
		"icon": "new_input.png",
		"roles": ["menuitems"],

		"layout": [{
			"type": "layout.xforms.label",
			"moveY": -1,
			"moveX": 0
		}],
		"properties": [{
			"id": "xf_id",
			"type": "String",
			"title": "Id",
			"prefix": "oryx",
			"value": "",
			"popular": true,
			"description": "",
			"readonly": false,
			"optional": false,
			"refToView": "",
			"length": "30"
		},
		{
			"id": "xf_linktype",
			"type": "Choice",
			"title": "Linktype",
			"title_de": "Linktyp",
			"prefix": "oryx",
			"value": "intern",
			"description": "The link type",
			"popular": true,
			"readonly": false,
			"optional": true,
			"refToView": "menuitem",
			"items": [{
				"id": "c1",
				"title": "Intern",
				"value": "intern",
				"refToView": ""
			},
			{
				"id": "c2",
				"title": "Workflow",
				"value": "workflow",
				"refToView": ""
			},
			{
				"id": "c2",
				"title": "Menu",
				"title_de": "Menue",
				"value": "menu",
				"refToView": ""
			},
			{
				"id": "c3",
				"title": "Extern",
				"value": "Extern",
				"refToView": ""
			} ]
		},
		{
			"id": "xf_url",
			"type": "String",
			"title": "Url",
			"title_de": "Url",
			"prefix": "oryx",
			"value": "",
			"popular": true,
			"readonly": false,
			"optional": true,
			"refToView": "",
			"length": "30"
		}]
	},
	{
		"type": "node",
		"id": "Label",
		"title": "Menuheader",
		"title_de": "Menue Kopf",
		"groups": ["Support Elements"],
		"description": "A label for form controls.",
		"view": "new_label.svg",
		"icon": "new_label.png",
		"roles": ["label"],
		"properties": [{
			"id": "xf_id",
			"type": "String",
			"title": "Id",
			"prefix": "oryx",
			"value": "",
			"description": "",
			"readonly": false,
			"visible":false,
			"optional": true,
			"refToView": "",
			"length": "30"
		},
		{
			"id": "xf_text",
			"type": "String",
			"title": "text",
			"prefix": "oryx",
			"value": "Menuheader",
			"description": "",
			"readonly": false,
			"optional": true,
			"refToView": "labeltext",
			"length": "100",
			"wrapLines": true
		}]
	},
	{
		"type": "node",
		"id": "Menu",
		"title": "Menu",
		"title_de": "Menue",
		"groups": ["Containers"],
		"description": "A container for defining a hierarchy of menu controls.",
		"view": "new_group.svg",
		"icon": "new_group.png",
		"roles": ["menus"],

		"layout": [{
			"type": "layout.rows",
			"marginTop": 15,
			"marginLeft": 15,
			"spacingX": 15,
			"spacingY": 15,
			"exclude": ["http://b3mn.org/stencilset/xforms#Label"]
		},
		{
			"type": "layout.xforms.label",
			"moveY": -1,
			"moveX": 0
		}],
		"properties": [{
			"id": "xf_id",
			"type": "String",
			"title": "Id",
			"prefix": "oryx",
			"value": "",
			"description": "",
			"readonly": false,
			"optional": true,
			"refToView": "",
			"length": "30"
		},
		{
			"id": "xf_type",
			"type": "Choice",
			"title": "Menutype",
			"title_de": "Menuetyp",
			"prefix": "oryx",
			"value": "main",
			"readonly": false,
			"optional": false,
			"refToView": "",
			"items": [{
				"id": "c1",
				"title": "Mainmenu",
				"title_de": "Hauptmenue",
				"value": "main",
				"refToView": ""
			},
			{
				"id": "c2",
				"title": "Submenu",
				"title_de": "Untermenue",
				"value": "sub",
				"refToView": ""
			}]
		}]
	}],
	"rules": {
		"containmentRules": [{
			"role": "menus",
			"contains": ["label","menuitems"]
		},
		{
			"role": "main_container",
			"contains": ["menus"]
		}]
	}
}
